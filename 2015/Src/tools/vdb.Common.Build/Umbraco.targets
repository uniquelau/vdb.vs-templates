<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <!-- TODO: Make this work with solution explorer -->
  <!-- This may work when the msbuild files are located inside the solution directory, need to investigate -->
  
  <!-- Files generated by Umbraco -->
  <ItemGroup>	
    <Content Include="App_Data\packages\installed\installedPackages.config" Condition="Exists('App_Data\packages\installed\installedPackages.config'" />
    <Content Include="App_Data\packages\installed\createdPackages.config" Condition="Exists('App_Data\packages\installed\createdPackages.config')" />

    <!-- This file is automatically created when content editors set permissions, you may wish to include it in your deployment.
    <Content Include="App_Data\access.config" Condition="Exists('App_Data\access.config')" />
    -->
  </ItemGroup>
  
  <!-- Files required to run Umbraco, build will error if missing -->
  <ItemGroup>
	<Content Include="default.aspx" />
    <Folder Include="App_Data\ExamineIndexes\" />
    <Folder Include="App_Data\Logs\" />
    <Folder Include="App_Data\preview\" />
    <Folder Include="App_Plugins\" />
  </ItemGroup>

  <!-- Media Target -->
  <Target Name="Media">
    <CreateItem Include="media\**\*.*">
      <Output ItemName="Content" TaskParameter="Include" />
    </CreateItem>
  </Target>


  <!-- Media Target -->
  <Target Name="AddMediaToOutput">
    <CreateItem Include="media\**\*.*">
      <Output ItemName="Content" TaskParameter="Include" />
    </CreateItem>
  </Target>

  <!-- Front-end code Target -->
  <Target Name="AddScriptsAndCssToOutput">
    <CreateItem Include="css\**\*.*">
      <Output ItemName="Content" TaskParameter="Include" />
    </CreateItem>
    <CreateItem Include="scripts\**\*.*">
      <Output ItemName="Content" TaskParameter="Include" />
    </CreateItem>
  </Target>
  
</Project>
